<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="contactDialog" title="Edit Contact" type="Message" contentWidth="50%">
		<content>
			<VBox>
				<Title text="{UserName}" titleStyle="H3"/>
				<Label text="First Name" class="sapUiSmallMarginTop"/>
				<Input id="inputFirstName" value="{FirstName}"/>
				<Label text="Last Name" class="sapUiSmallMarginTop"/>
				<Input id="inputLastName" value="{LastName}"/>
				<Label text="Age" class="sapUiSmallMarginTop"/>
				<Input id="inputAge" value="{Age}"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="Save" type="Emphasized" press=".onUpdateContact"/>
		</beginButton>
		<endButton>
			<Button text="Close" press=".onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>